<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABE1F9"
    tools:context=".Get_Started">

    <ImageView
        android:id="@+id/shardaLogo"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SU Car Pooling"
        android:textColor="#183BE8"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shardaLogo"
        app:layout_constraintVertical_bias="0.028" />

    <ImageButton
        android:id="@+id/shardaBuilding"
        android:layout_width="414dp"
        android:layout_height="285dp"
        android:background="@drawable/building"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/getstartedBTN"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:background="@drawable/getstart_button"
        android:text="Get Started"
        android:textSize="30dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shardaBuilding"
        app:layout_constraintVertical_bias="0.736" />

    <TextView
        android:id="@+id/getText"
        android:layout_width="169dp"
        android:layout_height="87dp"
        android:gravity="center"
        android:text="GET STARTED"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:textStyle="bold"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/getstartedBTN"
        app:layout_constraintEnd_toEndOf="@+id/getstartedBTN"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="@+id/getstartedBTN"
        app:layout_constraintTop_toTopOf="@+id/getstartedBTN"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/arrowImg"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:background="@drawable/arrow_sign"
        android:elevation="10dp"

        app:layout_constraintBottom_toBottomOf="@+id/getstartedBTN"
        app:layout_constraintEnd_toEndOf="@+id/getstartedBTN"
        app:layout_constraintStart_toEndOf="@+id/getText"
        app:layout_constraintTop_toTopOf="@+id/getstartedBTN" />


</androidx.constraintlayout.widget.ConstraintLayout>